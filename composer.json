{
    "name": "your-username/php-composer",
    "description": "A PHP project using Composer with GitHub Actions",
    "type": "project",
    "require": {
      "php": "^8.0"
    },
    "autoload": {
      "psr-4": {
        "App\\": "src/"
      }
    },
    "scripts": {
      "test": "vendor/bin/phpunit"
    },
    "config": {
      "optimize-autoloader": true,
      "preferred-install": "dist",
      "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
  }
  